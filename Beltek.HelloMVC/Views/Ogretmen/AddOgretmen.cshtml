@model Ogretmen
@{
    ViewData["Title"] = "AddOgretmen";
}

<h1>Add Ogretmen</h1>

<form asp-action="AddOgretmen" asp-controller="Ogretmen" method="post">
    
    <div class="mb-3">
        <label class="form-label">Tc Kimlik No</label>
        <input asp-for="Tckimlik" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input id="Ad" name="Ad" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Brans" class="form-label"></label>
        <input asp-for="Brans" class="form-control" />
    </div>
    
    <input type="submit" value="Kaydet" class="btn btn-primary" />
</form>

